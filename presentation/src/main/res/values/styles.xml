<resources>

    <style name="TextPrimary">
        <item name="textColor">primary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="TextSecondary">
        <item name="textColor">tertiary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="TextTertiary">
        <item name="textColor">tertiary</item>
        <item name="textSize">tertiary</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>

        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">secondary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="CollapsingToolbarCollapsedText">
        <item name="textSize">toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingToolbarExpandedText">
        <item name="android:textSize">44dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScheduledSampleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rectangle_outline_22dp</item>
        <item name="android:backgroundTint">?android:attr/divider</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="DrawerRow">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">primary</item>
        <item name="textSize">secondary</item>
        <item name="font_family">medium</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.CustomOverScroll" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorEdgeEffect">#e4e4e4</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Welcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/conversation_start_bg</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/material_text_black_primary</item>
    </style>

    <style name="DialogDescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_text_black_secondary</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">@dimen/dialog_btn_padding</item>
        <item name="android:paddingEnd">@dimen/dialog_btn_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DefaultCompatDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title"/>

    <style name="FeedbackButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="colorButtonNormal">@color/black_87_transparent</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>
