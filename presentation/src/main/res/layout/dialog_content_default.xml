<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/Theme.CustomOverScroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.moez.QKSMS.common.widget.QkTextView
            android:id="@+id/dialog_title"
            style="@style/DialogTitleText"
            android:layout_marginBottom="@dimen/dialog_content_text_margin"
            tools:text="Boost+"/>

        <com.moez.QKSMS.common.widget.QkTextView
            android:id="@+id/dialog_desc"
            style="@style/DialogDescText"
            tools:text="Open Accessibility by one step, Boost+ will be activated."/>
    </LinearLayout>
</ScrollView>
