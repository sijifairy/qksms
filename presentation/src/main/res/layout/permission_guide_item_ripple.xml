<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.moez.QKSMS.feature.guide.RippleView
        android:id="@+id/ripple_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/permission_guide_icon_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="33dp"
            android:gravity="start|center_vertical"
            android:orientation="vertical">

            <com.moez.QKSMS.common.widget.QkTextView
                android:id="@+id/permission_guide_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/app_name"
                android:textColor="#484848"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/permission_guide_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="OFF"
                android:textColor="#a1a1a1"
                android:textSize="14sp" />
        </LinearLayout>
    </com.moez.QKSMS.feature.guide.RippleView>

    <com.moez.QKSMS.feature.guide.ToggleView
        android:id="@+id/permission_guide_toggle_view"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="9dp"
        android:visibility="gone" />
</FrameLayout>
