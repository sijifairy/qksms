<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@android:color/transparent"
        app:layout_scrollFlags="scroll|snap|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:orientation="vertical">

        <com.moez.QKSMS.common.widget.QkEditText
            android:id="@+id/feedback_content"
            android:layout_width="fill_parent"
            android:layout_height="156dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:gravity="top"
            android:hint="Your feedback is highly appreciated and will help usÂ make improvements in future versions."
            android:inputType="text"
            android:paddingBottom="6dp"
            android:paddingEnd="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textColorHint="#bdbdbd"
            android:textSize="16dp"/>

        <com.moez.QKSMS.common.widget.QkEditText
            android:id="@+id/email_address"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textColorHint="#bdbdbd"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/feedback_send"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="30dp"
            android:text="SEND"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:theme="@style/FeedbackButton"/>
    </LinearLayout>
</FrameLayout>