<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/grid_root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/card_rounded_corner_bg"
  android:elevation="1dp"
  android:orientation="vertical"
  tools:ignore="UnusedAttribute">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.moez.QKSMS.common.view.RatioRoundImageView
      android:id="@+id/theme_banner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scaleType="centerCrop"
      app:radius_leftTop="2dp"
      app:radius_rightTop="2dp"
      app:super_apps_ratio="1.778" />
  </FrameLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
      android:id="@+id/theme_icon"
      android:layout_width="0dp"
      android:layout_height="38dp"
      android:layout_centerVertical="true"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginEnd="12dp"
      android:layout_marginRight="12dp" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:layout_toStartOf="@+id/action_btn"
      android:layout_toLeftOf="@+id/action_btn"
      android:layout_toEndOf="@id/theme_icon"
      android:layout_toRightOf="@id/theme_icon"
      android:orientation="vertical"
      tools:ignore="RtlHardcoded">

      <com.moez.QKSMS.common.widget.QkTextView
        android:id="@+id/theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Launcher Default"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:font_family="medium"
        tools:ignore="HardcodedText" />

      <com.moez.QKSMS.common.widget.QkTextView
        android:id="@+id/theme_description_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Description of the theme"
        android:textColor="#666666"
        android:textSize="10sp"
        app:font_family="regular"
        tools:ignore="HardcodedText,SmallSp" />
    </LinearLayout>

    <com.moez.QKSMS.common.widget.QkTextView
      android:id="@+id/action_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:background="@drawable/material_compat_button_bg"
      android:gravity="center"
      android:paddingLeft="12dp"
      android:paddingTop="12dp"
      android:paddingRight="12dp"
      android:paddingBottom="12dp"
      android:text="Apply Now"
      android:textAllCaps="true"
      android:textColor="#3A77F5"
      android:textSize="12sp"
      app:font_family="medium"
      tools:ignore="HardcodedText" />
  </RelativeLayout>
</LinearLayout>
