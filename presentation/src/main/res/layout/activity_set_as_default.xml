<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ff1e6ee7">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_gravity="center_horizontal"
      android:src="@drawable/ic_launcher_big" />

    <com.moez.QKSMS.common.widget.QkTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="32dp"
      android:text="Set Joy SMS as your default"
      android:textColor="@android:color/white"
      android:textSize="20dp" />

    <com.moez.QKSMS.common.widget.QkTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="8dp"
      android:layout_marginRight="24dp"
      android:alpha="0.7"
      android:gravity="center_horizontal"
      android:includeFontPadding="false"
      android:text="To send messages and see new ones, you'll need to make Joy SMS your default SMS app"
      android:textColor="@android:color/white"
      android:textSize="14dp" />

    <com.moez.QKSMS.common.widget.QkTextView
      android:id="@+id/btn_start"
      android:layout_width="200dp"
      android:layout_height="48dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="108dp"
      android:gravity="center"
      android:includeFontPadding="false"
      android:text="START"
      android:textColor="#ff1e6ee7"
      android:textSize="20sp"
      android:textStyle="bold" />
  </LinearLayout>
</FrameLayout>