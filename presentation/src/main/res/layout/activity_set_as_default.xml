<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/content"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/backgroundLight">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
      android:layout_width="62dp"
      android:layout_height="62dp"
      android:layout_gravity="center_horizontal"
      android:src="@mipmap/ic_launcher" />

    <com.moez.QKSMS.common.widget.QkTextView
      android:id="@+id/title1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="40dp"
      android:text="Set Bling SMS as your default"
      android:textColor="@color/textPrimary"
      android:textSize="18dp"
      app:font_family="medium" />

    <com.moez.QKSMS.common.widget.QkTextView
      android:id="@+id/title2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="16dp"
      android:layout_marginRight="24dp"
      android:alpha="0.7"
      android:gravity="center_horizontal"
      android:includeFontPadding="false"
      android:text="To send messages and see new ones, you'll need to make Bling SMS your default SMS app"
      android:textColor="@color/textSecondary"
      android:textSize="14dp" />

    <com.moez.QKSMS.common.widget.QkTextView
      android:id="@+id/btn_start"
      android:layout_width="180dp"
      android:layout_height="48dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="138dp"
      android:gravity="center"
      android:includeFontPadding="false"
      android:text="START"
      android:textColor="#fff"
      android:textSize="16sp"
      app:font_family="medium" />
  </LinearLayout>
</FrameLayout>