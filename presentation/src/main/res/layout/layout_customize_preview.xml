<?xml version="1.0" encoding="utf-8"?>
<com.moez.QKSMS.feature.fonts.CustomizePreviewView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <com.moez.QKSMS.common.widget.QkTextView
    android:id="@+id/datetime"
    style="@style/TextSecondary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="14dp"
    android:text="Dec 1, 2021, 18:24"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <com.moez.QKSMS.common.widget.AvatarView
    android:id="@+id/avatar"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginStart="12dp"
    app:layout_constraintBottom_toBottomOf="@+id/message_in"
    app:layout_constraintStart_toStartOf="parent" />

  <com.moez.QKSMS.common.widget.TightTextView
    android:id="@+id/message_in"
    style="@style/TextPrimary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="12dp"
    android:autoLink="email|phone|web"
    android:background="@drawable/message_only"
    android:gravity="start|center_vertical"
    android:minHeight="36dp"
    android:text="Choose a font you like"
    app:layout_constrainedWidth="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/avatar"
    app:layout_constraintTop_toBottomOf="@id/datetime"
    tools:backgroundTint="@color/tools_theme" />

  <com.moez.QKSMS.common.widget.TightTextView
    android:id="@+id/message_out"
    style="@style/TextPrimary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="60dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="36dp"
    android:autoLink="email|phone|web"
    android:background="@drawable/message_only"
    android:backgroundTint="?attr/bubbleColor"
    android:gravity="start|center_vertical"
    android:minHeight="36dp"
    android:text="Change font size for the whole app!"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/message_in"
    tools:backgroundTint="@color/white" />
</com.moez.QKSMS.feature.fonts.CustomizePreviewView>